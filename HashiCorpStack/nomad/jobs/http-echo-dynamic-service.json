{
  "Job": {
    "Datacenters": [
      "dc1"
    ],
    "ID": "http-echo",
    "TaskGroups": [
      {
        "Name": "echo",
        "Count": 5,
        "Resources": {
          "Networks": {
            "MBits": 10,
            "DynamicPorts": [
              {
                "Label": "db",
                "Value": 0
              }
            ]
          }
        },
        "Services": [
          {
            "Name": "http-echo",
            "PortLabel": "http"
          }
        ],
        "Tasks": [
          {
            "Config": {
              "image": "hashicorp/http-echo:latest",
              "args": [
                "-listen", ":${NOMAD_PORT_http}",
                "-text", "Hello and welcome to ${NOMAD_IP_http} running on port ${NOMAD_PORT_http}"
              ]
            },
            "Driver": "docker",
            "Name": "server"
          }
        ]
      }
    ]
  }
}